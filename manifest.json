{
  "name": "Shorthand Embed Button",
  "description": "Add a button linking to a Shorthand story",
  "version": "1.0.0",
  "edit": "edit.html",
  "render": "render.html",
  "inputs": [
    {
      "label": "Shorthand URL",
      "name": "shorthandUrl",
      "type": "text",
      "required": true
    },
    {
      "label": "Button Text",
      "name": "buttonText",
      "type": "text",
      "defaultValue": "Voir le contenu"
    },
    {
      "label": "Background Color",
      "name": "bgColor",
      "type": "text",
      "defaultValue": "#D51D2C"
    },
    {
      "label": "Text Color",
      "name": "textColor",
      "type": "text",
      "defaultValue": "#FFFFFF"
    }
  ]
}
